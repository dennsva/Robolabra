package robotti;

import lejos.nxt.*;

/**
 * Example leJOS Project with an ant build file
 *
 */
public class Robotti {

	public static void main(String[] args) {
		//alas = A forward
		Motor.A.setSpeed(180);
		TouchSensor sensori1 = new TouchSensor(SensorPort.S1);
		TouchSensor sensori2 = new TouchSensor(SensorPort.S2);
		
		while (true) {
			if (sensori1.isPressed()) {
				Motor.A.rotate(360);
			} else if (sensori2.isPressed()) {
				Motor.A.rotate(-360);
			} else {
				System.out.println("oho!");
				break;
			}
		}
		
		Button.waitForPress();
		
		//eteenp√§in = B forward
//		Motor.B.setSpeed(180);
//		Motor.B.forward();
//		Motor.B.rotate(720);
	}
}
